<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <!--android:background="@color/bottomsheet_bg"-->

    <ImageView
        android:id="@+id/enlargedIv"
        android:layout_width="match_parent"
        android:contentDescription="@string/app_name"
        android:layout_height="match_parent"
        android:gravity="top"
        android:padding="@dimen/padding_normal_1x"
        android:layout_centerVertical="true"

        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/dismissTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:textStyle="bold"
        android:focusableInTouchMode="true"
        android:padding="@dimen/padding_normal_2x"
        android:paddingStart="@dimen/padding_normal_2x"
        android:paddingEnd="@dimen/padding_normal_2x"
        android:text="@string/text_back"
        android:textAllCaps="true"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="@dimen/xlarge_text_size"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
         />
</RelativeLayout>